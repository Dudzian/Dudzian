{
  "preset": {
    "name": "BitMEX Connectivity",
    "strategies": [
      {
        "name": "bitmex_connectivity",
        "engine": "grid_trading",
        "parameters": {
          "exchange": "BITMEX",
          "default_environment": "paper",
          "available_environments": [
            "paper",
            "testnet",
            "live"
          ]
        },
        "license_tier": "community",
        "risk_classes": [
          "infrastructure"
        ],
        "required_data": [
          "ohlcv"
        ],
        "tags": [
          "exchange",
          "bitmex"
        ],
        "metadata": {
          "description": "Automatycznie wygenerowany preset środowisk dla giełdy BitMEX.",
          "environments": [
            {
              "name": "paper",
              "description": "Papierowy symulator BitMEX futures.",
              "config": {
                "description": "Papierowy symulator BitMEX futures.",
                "exchange_manager": {
                  "mode": "paper",
                  "paper_variant": "futures",
                  "paper_initial_cash": 100000,
                  "paper_cash_asset": "USDT",
                  "simulator": {
                    "leverage_limit": 10.0,
                    "maintenance_margin_ratio": 0.04,
                    "funding_rate": 0.0001,
                    "funding_interval_seconds": 28800
                  },
                  "rate_limit_rules": [
                    {
                      "rate": 30,
                      "per": 1
                    },
                    {
                      "rate": 600,
                      "per": 60
                    }
                  ]
                },
                "credentials": {
                  "key_id": null,
                  "secret": null
                }
              }
            },
            {
              "name": "testnet",
              "description": "BitMEX testnet futures API.",
              "config": {
                "description": "BitMEX testnet futures API.",
                "exchange_manager": {
                  "mode": "futures",
                  "testnet": true,
                  "watchdog": {
                    "retry_policy": {
                      "max_attempts": 5,
                      "base_delay": 0.3
                    }
                  },
                  "rate_limit_rules": [
                    {
                      "rate": 30,
                      "per": 1
                    },
                    {
                      "rate": 600,
                      "per": 60
                    }
                  ],
                  "native_adapter": {
                    "settings": {
                      "stream": {
                        "base_url": "http://127.0.0.1:8765"
                      }
                    }
                  },
                  "failover": {
                    "enabled": true,
                    "failure_threshold": 2,
                    "cooldown_seconds": 40
                  }
                },
                "credentials": {
                  "key_id": "${BITMEX_TESTNET_KEY}",
                  "secret": "${BITMEX_TESTNET_SECRET}"
                }
              }
            },
            {
              "name": "live",
              "description": "Produkcyjne środowisko BitMEX futures.",
              "config": {
                "description": "Produkcyjne środowisko BitMEX futures.",
                "exchange_manager": {
                  "mode": "futures",
                  "testnet": false,
                  "watchdog": {
                    "retry_policy": {
                      "max_attempts": 3,
                      "base_delay": 0.5
                    },
                    "circuit_breaker": {
                      "failure_threshold": 4,
                      "recovery_time_seconds": 90
                    }
                  },
                  "rate_limit_rules": [
                    {
                      "rate": 30,
                      "per": 1
                    },
                    {
                      "rate": 600,
                      "per": 60
                    }
                  ],
                  "native_adapter": {
                    "settings": {
                      "stream": {
                        "base_url": "http://127.0.0.1:8765"
                      }
                    }
                  },
                  "failover": {
                    "enabled": true,
                    "failure_threshold": 3,
                    "cooldown_seconds": 60
                  }
                },
                "credentials": {
                  "key_id": "${BITMEX_LIVE_KEY}",
                  "secret": "${BITMEX_LIVE_SECRET}"
                }
              }
            }
          ]
        }
      }
    ]
  }
}

