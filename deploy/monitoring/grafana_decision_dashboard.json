{
  "title": "Decision Engine Guardrails",
  "uid": "decision-guardrails",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Evaluation rate (5m)",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "decision:evaluations:rate5m",
          "legendFormat": "{{strategy}}/{{profile}}/{{result}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "1/s",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green"}]}
        },
        "overrides": []
      },
      "options": {
        "legend": {"showLegend": true},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "gridPos": {"h": 9, "w": 18, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Active guardrail profiles",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum(risk_guardrail_hedge_mode)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 1}
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {"calcs": ["last"], "fields": "", "values": false},
        "orientation": "auto",
        "textMode": "value"
      },
      "gridPos": {"h": 9, "w": 6, "x": 18, "y": 0}
    },
    {
      "id": 3,
      "title": "Top rejection reasons (5m)",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "decision:rejections:rate5m",
          "legendFormat": "{{reason}} ({{intent}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "1/s",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green"}]}
        },
        "overrides": []
      },
      "options": {
        "legend": {"showLegend": true},
        "tooltip": {"mode": "multi", "sort": "none"}
      },
      "gridPos": {"h": 9, "w": 24, "x": 0, "y": 9}
    }
  ],
  "time": {"from": "now-6h", "to": "now"},
  "timepicker": {"refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "1h"]}
}
