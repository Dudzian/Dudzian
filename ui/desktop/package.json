{
  "name": "dudzian-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm:dev:main\" \"npm:dev:renderer\"",
    "dev:main": "ts-node --project tsconfig.json -r tsconfig-paths/register src/main/main.ts",
    "dev:renderer": "vite",
    "build": "vite build && tsc -p tsconfig.main.json",
    "preview": "vite preview --host --port 4173 --outDir dist/renderer",
    "start": "electron dist/main/main.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test:e2e": "npm run build && playwright test"
  },
  "dependencies": {
    "electron": "26.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.45.1",
    "zod": "3.22.4",
    "@hookform/resolvers": "3.1.1"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "2.0.0",
    "@electron-toolkit/utils": "2.0.0",
    "@types/node": "20.4.1",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react": "4.0.0",
    "@playwright/test": "1.38.0",
    "concurrently": "8.2.0",
    "eslint": "8.46.0",
    "eslint-plugin-react": "7.33.2",
    "ts-node": "10.9.1",
    "typescript": "5.1.6",
    "vite": "4.4.9",
    "tsconfig-paths": "4.2.0"
  }
}
